#include "libft.h"

int	ft_nstrings(char const *s, char c)
{
  int i;
  int strings;

  while (s[i] != '\0')
    {
      if (s[i] == c)
	{
	  while (s[i] == c)
	    i++;
	  strings++;
	}
      else
	i++;
    }
  if (s[i - 1] != c)
    strings++;
  return (strings);
}

char	**ft_strsplit(char const *s, char c)
{
  char **tab;
  int i;

  tab = malloc(ft_nstrings(s) + 1);
  i = 0;
  j = 0;
  while (s[i] != '\0')
    {
      if (s[i] == c)
	{
	  m = i;
	  while (s[i] == c)
	    i++;
	  tab[j] = ft_strsub(s, m, i - m + 1);
	  j++;
	}
      else
	i++;
    }
}
